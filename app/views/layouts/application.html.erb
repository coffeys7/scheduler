<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/head_tags' %>
</head>
<body>

<header>
  <!-- Top Nav -->
  <%= render 'layouts/top_nav' %>
</header>

<!-- Devise Flash Messages [ notice ] -->
<% if notice %>
    <script>
      HTMLHelper.toast({ type: 'success', text: '<%= notice %>', duration: 3000 });
    </script>
<% end %>

<!-- Devise Flash Messages [ alert ] -->
<% if alert %>
    <% alert_title = (alert == 'need_signin') ? 'Please sign in to continue' : alert %>
    <% alert_type = (alert == 'need_signin') ? 'warning' : 'alert' %>
    <script>
      HTMLHelper.toast({ type: '<%= alert_type %>', text: '<%= alert_title %>', duration: 5000 });
    </script>
<% end %>

<!-- Rendered Page Content -->
<%= hidden_field_tag :authenticity_token, form_authenticity_token, :id => "CSRF_TOK" %>
<%= yield %>

